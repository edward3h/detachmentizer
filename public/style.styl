sans-serif = "Helvetica", Arial, Sans-serif
primary-color = teal
link-color = blueviolet

body
  font-family: sans-serif
  margin-top: 20px
  padding-left: 15px
  padding-right: 15px

h1
  color: primary-color

a
  color: link-color
  
section,
footer
  margin-top: 20px

.numberField
  max-width: 300px
  font-size: 20px
  display: flex
  align-items: center
  .label
    flex-grow: 1
  .value
    min-width: 2em
    text-align: right
    padding: 4px
  .inc, .dec
    font-size: 24px
    font-weight: bold
    text-align: center
    cursor: pointer
    width: 30px
    height: 30px
    border: thin solid black
    &:hover
      background-color: yellow
      
#maxdets
  .numberField
    max-width: 500px
      
#results 
  display: table
  border-spacing: 1em
  border-collapse: true
  .warn
    background-color: orange
    
.result
  display: table-row
  span
    display: table-cell
  .desc
    font-style: italic
  
  